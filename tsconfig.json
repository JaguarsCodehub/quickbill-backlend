{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "api/**/*.ts",
    "utils/**/*.ts",
    "utils/dcrypt.js"
  ],
  "exclude": [
    "node_modules"
  ]
}